{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "declaration": true,
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@d20/engine-core": ["packages/engine-core/src"],
      "@d20/render-core": ["packages/render-core/src"],
      "@d20/render-react": ["packages/render-react/src"],
      "@d20/schema": ["packages/schema/src"],
      "@d20/examples/*": ["packages/examples/*"]
    }
  }
}
