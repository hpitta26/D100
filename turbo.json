{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env*", "**/.env.*"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "start": {
      "cache": false
    }
  }
}
